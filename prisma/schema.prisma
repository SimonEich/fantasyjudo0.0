// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  authorId  String
  content   String

  @@index([authorId])
}

model Test {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  authorId  String
  content      String

  @@index([authorId])
}

model Name {
  id        String   @id @default(cuid())
  authorId   String 
  name String
}
