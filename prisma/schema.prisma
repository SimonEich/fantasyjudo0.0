// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  authorId  String
  content   String

  @@index([authorId])
}

model Test {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  authorId  String
  content   String
  test      String

  @@index([authorId])
}

model Name {
  id       String @id @default(cuid())
  authorId String
  name     String @unique
}

model Captain {
  id       String @id @default(cuid())
  authorId String @unique
  captain  String
  weight   Int
  country  String
}

model Team {
  id       String @id @default(cuid())
  authorId String
  user     String
  player   String
  weight   Int
  country  String
}

model TimeEnd {
  id              String   @id @default(cuid())
  now             DateTime @default(now())
  day             Int
  month           Int
  year            Int
  hour            Int
  competitionName String   @unique
}

model Winner {
  id       String   @id @default(cuid())
  now      DateTime @default(now())
  authorId String
  player   String
  weight   Int      @unique
  rank     Int
  country  String
}
